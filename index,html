<body>

<div class="container">

    <!-- TELA DE CRIAÇÃO DE PERSONAGEM -->
    <div id="createScreen" class="card">
        <h2>Criação de Personagem</h2>

        <input id="nome" placeholder="Nome do personagem">
        <select id="profissao">
            <option value="Desempregado">Desempregado</option>
            <option value="PM">Polícia Militar</option>
            <option value="Mecânico">Mecânico</option>
            <option value="Paramédico">Paramédico</option>
            <option value="Taxista">Taxista</option>
        </select>

        <button onclick="criarPersonagem()">Criar Personagem</button>
    </div>

    <!-- TELA DO JOGO -->
    <div id="gameScreen" class="card">
        <h2>Bem-vindo, <span id="p_nome"></span></h2>
        <p>Profissão: <span id="p_prof"></span></p>
        <p>Dinheiro: R$ <span id="p_money"></span></p>

        <button onclick="ganharDinheiro()">Trabalhar + R$100</button>

        <h3>Chat Global</h3>
        <div id="chatBox"></div>
        <input id="chatInput" placeholder="Digite sua mensagem..." onkeydown="if(event.key==='Enter') enviarMsg()">
        <button onclick="enviarMsg()">Enviar</button>
    </div>

</div>

<script>
let player = null;

// CARREGAR PLAYER SE EXISTIR
window.onload = () => {
    const save = localStorage.getItem("rp_player");

    if (save) {
        player = JSON.parse(save);
        abrirGame();
    }
};

// CRIAR PERSONAGEM
function criarPersonagem() {
    const nome = document.getElementById("nome").value;
    const prof = document.getElementById("profissao").value;

    if (nome.trim() === "") return alert("Digite um nome!");

    player = {
        nome: nome,
        profissao: prof,
        money: 500,
        chat: []
    };

    localStorage.setItem("rp_player", JSON.stringify(player));
    abrirGame();
}

// ABRIR GAME
function abrirGame() {
    document.getElementById("createScreen").style.display = "none";
    document.getElementById("gameScreen").style.display = "block";

    document.getElementById("p_nome").innerText = player.nome;
    document.getElementById("p_prof").innerText = player.profissao;
    document.getElementById("p_money").innerText = player.money;

    carregarChat();
}

// GANHAR DINHEIRO
function ganharDinheiro() {
    player.money += 100;
    document.getElementById("p_money").innerText = player.money;
    salvar();
}

// CHAT
function enviarMsg() {
    const text = document.getElementById("chatInput").value;
    if (text.trim() === "") return;

    player.chat.push(text);
    document.getElementById("chatInput").value = "";
    carregarChat();
    salvar();
}

function carregarChat() {
    const box = document.getElementById("chatBox");
    box.innerHTML = "";

    player.chat.forEach(msg => {
        box.innerHTML += `<p><b>${player.nome}:</b> ${msg}</p>`;
    });
}

// SALVAR PLAYER
function salvar() {
    localStorage.setItem("rp_player", JSON.stringify(player));
}
</script>

</body>
